<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.drill.mapper.BattleMapper">
    
    <resultMap type="Battle" id="BattleResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="mapId"    column="map_id"    />
        <result property="mapType"    column="map_type"    />
        <result property="team"    column="team"    />
        <result property="beginTime"    column="begin_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectBattleVo">
        select id, name, map_id, map_type, team, begin_time, end_time, status, remark, create_time, update_time from t_battle
    </sql>

    <select id="selectBattleList" parameterType="Battle" resultMap="BattleResult">
        <include refid="selectBattleVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="mapId != null "> and map_id = #{mapId}</if>
            <if test="mapType != null "> and map_type like concat('%', #{mapType}, '%')</if>
            <if test="team != null  and team != ''"> and team like concat('%', #{team}, '%')</if>
            <if test="beginTime != null "> and begin_time = #{beginTime}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBattleById" parameterType="Long" resultMap="BattleResult">
        <include refid="selectBattleVo"/>
        where id = #{id}
    </select>

    <insert id="insertBattle" parameterType="Battle">
        insert into t_battle
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="mapId != null">map_id,</if>
            <if test="mapType != null">map_type,</if>
            <if test="team != null and team != ''">team,</if>
            <if test="beginTime != null">begin_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="mapId != null">#{mapId},</if>
            <if test="mapType != null">#{mapType},</if>
            <if test="team != null and team != ''">#{team},</if>
            <if test="beginTime != null">#{beginTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateBattle" parameterType="Battle">
        update t_battle
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="mapId != null">map_id = #{mapId},</if>
            <if test="mapType != null">map_type = #{mapType},</if>
            <if test="team != null and team != ''">team = #{team},</if>
            <if test="beginTime != null">begin_time = #{beginTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBattleById" parameterType="Long">
        delete from t_battle where id = #{id}
    </delete>

    <delete id="deleteBattleByIds" parameterType="String">
        delete from t_battle where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>